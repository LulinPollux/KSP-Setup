<Window x:Class="KSP_Setup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSP_Setup"
        mc:Ignorable="d"
        Title="KSP 설정" Height="350" Width="600" ResizeMode="NoResize" Icon="res/icon.ico">
    <Grid>
        <Label Content="KSP 디렉터리: " HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtbox_kspDir" HorizontalAlignment="Left" Height="25" Margin="104,10,0,0" TextWrapping="Wrap" Text="KSP_x64.exe를 선택하세요." VerticalAlignment="Top" Width="405" IsReadOnly="True"/>
        <Button x:Name="btn_kspDir" Content="폴더 탐색" HorizontalAlignment="Left" Height="25" Margin="514,10,0,0" VerticalAlignment="Top" Width="70" Click="Btn_kspDir_Click"/>
        <Label Content="한글패치 선택: " HorizontalAlignment="Left" Height="25" Margin="10,45,0,0" VerticalAlignment="Top" Width="89"/>
        <CheckBox x:Name="chkbox_vanilla" Content="바닐라" HorizontalAlignment="Left" Height="20" Margin="104,51,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <CheckBox x:Name="chkbox_dlc1" Content="Making History DLC" HorizontalAlignment="Left" Height="20" Margin="175,51,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <CheckBox x:Name="chkbox_dlc2" Content="Breaking Ground DLC" HorizontalAlignment="Left" Height="20" Margin="320,51,0,0" VerticalAlignment="Top" Width="145" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <Button x:Name="btn_Setup" Content="설정 시작" Margin="434,286,0,0" Click="Btn_Setup_Click" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" IsEnabled="False"/>
        <Button x:Name="btn_Exit" Content="종료" Margin="514,286,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Click="Btn_Exit_Click"/>
        <Label Content="옵션: " HorizontalAlignment="Left" Height="25" Margin="10,74,0,0" VerticalAlignment="Top" Width="69"/>
        <CheckBox x:Name="chkbox_ckan" Content="CKAN 설치" HorizontalAlignment="Left" Height="20" Margin="104,80,0,0" VerticalAlignment="Top" Width="89" IsChecked="True"/>
        <TextBox x:Name="txtbox_log" HorizontalAlignment="Left" Height="177" Margin="10,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="574" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
