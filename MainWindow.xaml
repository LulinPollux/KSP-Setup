<Window x:Class="KSP_Setup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSP_Setup"
        mc:Ignorable="d"
        Title="KSP 설정" Height="300" Width="500">
    <Grid>
        <Label Content="KSP 디렉터리: " HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtbox_kspDir" HorizontalAlignment="Left" Height="30" Margin="104,10,0,0" TextWrapping="Wrap" Text="ksp.exe가 있는 디렉터리를 입력하세요." VerticalAlignment="Top" Width="300" IsReadOnly="True"/>
        <Button x:Name="btn_kspDir" Content="폴더 탐색" HorizontalAlignment="Left" Height="30" Margin="409,10,0,0" VerticalAlignment="Top" Width="75" Click="Btn_kspDir_Click"/>
        <Label Content="한글패치 선택: " HorizontalAlignment="Left" Height="30" Margin="10,45,0,0" VerticalAlignment="Top" Width="89"/>
        <CheckBox x:Name="chkbox_vanilla" Content="바닐라" HorizontalAlignment="Left" Height="20" Margin="104,51,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <CheckBox x:Name="chkbox_dlc1" Content="Making History DLC" HorizontalAlignment="Left" Height="20" Margin="175,51,0,0" VerticalAlignment="Top" Width="135" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <CheckBox x:Name="chkbox_dlc2" Content="Breaking Ground DLC" HorizontalAlignment="Left" Height="20" Margin="315,51,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.139,1.11" IsChecked="True"/>
        <Button x:Name="btn_Setup" Content="설정 시작" Margin="327,232,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77" Click="Btn_Setup_Click"/>
        <Button x:Name="btn_Exit" Content="종료" Margin="409,232,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="Btn_Exit_Click"/>
        <Label Content="옵션: " HorizontalAlignment="Left" Height="30" Margin="10,74,0,0" VerticalAlignment="Top" Width="69"/>
        <CheckBox x:Name="chkbox_ckan" Content="CKAN 설치" HorizontalAlignment="Left" Height="20" Margin="104,80,0,0" VerticalAlignment="Top" Width="89" IsChecked="True"/>
        <RichTextBox x:Name="txtbox_log" HorizontalAlignment="Left" Height="123" Margin="10,104,0,0" VerticalAlignment="Top" Width="474" IsReadOnly="True">
            <FlowDocument/>
        </RichTextBox>
    </Grid>
</Window>
